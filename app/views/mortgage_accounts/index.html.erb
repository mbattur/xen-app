<p id="notice"><%= notice %></p>

<h1>Mortgage Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mortgage_accounts.each do |mortgage_account| %>
      <tr>
        <td><%= mortgage_account.balance %></td>
        <td><%= link_to 'Show', mortgage_account %></td>
        <td><%= link_to 'Edit', edit_mortgage_account_path(mortgage_account) %></td>
        <td><%= link_to 'Destroy', mortgage_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

