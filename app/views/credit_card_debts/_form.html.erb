<%= form_for(@credit_card_debt, :html => { role: "form" }) do |form| %>
  <% if credit_card_debt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(credit_card_debt.errors.count, "error") %> prohibited this credit_card_debt from being saved:</h2>

      <ul>
      <% credit_card_debt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="well">
    <div style="overflow: hidden;">
      <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :card_name %><br>
            <%= form.text_field :card_name, class: 'form-control', :required => true, placeholder: "What's the credit card name?" %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :balance %><br>
            <%= form.text_field :balance, class: 'form-control', :required => true, placeholder: "What's the credit card balance?"  %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :card_number %><br>
            <%= form.text_field :card_number, class: 'form-control', :required => true, placeholder: "What's the credit card number?" %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :payee_name %><br>
            <%= form.text_field :payee_name, class: 'form-control', :required => true, placeholder: "What's the name of company the payment should go to?"  %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :payee_address1 %><br>
            <%= form.text_field :payee_address1, class: 'form-control', :required => true, placeholder: "What's the payee address?" %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :payee_address2 %><br>
            <%= form.text_field :payee_address2, class: 'form-control', :required => true, placeholder: "Apartment, studio, or floor"  %>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :payee_city %><br>
            <%= form.text_field :payee_city, class: 'form-control', :required => true, placeholder: "City" %>
          </div>
          <div class="form-group col-md-4">
            <%= form.label :payee_state %><br>
            <%= form.text_field :payee_state, class: 'form-control', :required => true, placeholder: "State"  %>
          </div>
          <div class="form-group col-md-2">
            <%= form.label :payee_zip %><br>
            <%= form.text_field :payee_zip, class: 'form-control', :required => true, placeholder: "Zip" %>
          </div>
        </div>
        <div>
          <%= form.submit 'Submit', :class => 'button' %>
          <%= form.submit 'Enter more card', :class => 'button-blue' %>
        </div>
      </form>
    </div>
  </div>
<% end %>
