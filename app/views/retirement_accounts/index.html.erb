<p id="notice"><%= notice %></p>

<h1>Retirement Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @retirement_accounts.each do |retirement_account| %>
      <tr>
        <td><%= retirement_account.balance %></td>
        <td><%= link_to 'Show', retirement_account %></td>
        <td><%= link_to 'Edit', edit_retirement_account_path(retirement_account) %></td>
        <td><%= link_to 'Destroy', retirement_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

