<p id="notice"><%= notice %></p>

<h1>Stack Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stack_accounts.each do |stack_account| %>
      <tr>
        <td><%= stack_account.balance %></td>
        <td><%= link_to 'Show', stack_account %></td>
        <td><%= link_to 'Edit', edit_stack_account_path(stack_account) %></td>
        <td><%= link_to 'Destroy', stack_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stack Account', new_stack_account_path %>
