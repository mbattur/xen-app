<p id="notice"><%= notice %></p>

<h1>Small Emergencies</h1>

<table>
  <thead>
    <tr>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @small_emergencies.each do |small_emergency| %>
      <tr>
        <td><%= small_emergency.balance %></td>
        <td><%= link_to 'Show', small_emergency %></td>
        <td><%= link_to 'Edit', edit_small_emergency_path(small_emergency) %></td>
        <td><%= link_to 'Destroy', small_emergency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

